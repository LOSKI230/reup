{% extends 'base.html.twig' %}

{% block title %}Lecon index{% endblock %}

{% block body  %}


    <table class="table w-100">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lecon in lecons %}
            <tr>
                <td>{{ lecon.id }}</td>
                <td>{{ lecon.nom }}</td>
                <td>{{ lecon.description }}</td>

                <td >
                    <div class="d-flex justify-content-between">
                    <a class="btn btn-outline-primary  mx-1" href="{{ path('app_lecon_show', {'id': lecon.id}) }}">Consulter</a>
                    <a class="btn btn-outline-secondary mx-1" href="{{ path('app_lecon_edit', {'id': lecon.id}) }}">Modifier</a>
                        {{ include('lecon/_delete_form.html.twig') }}
                    </div>
                </td>


            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
